<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayout1"
    android:layout_width="@dimen/gallery_item_relLayout1_width"
    android:layout_height="@dimen/gallery_item_relLayout1_height" >

    <!-- android:layout_width="700dp" -->
    <!-- android:layout_height="980dp" -->

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="@dimen/gallery_item_relLayout1_width"
        android:layout_height="@dimen/gallery_item_relLayout1_width"
        android:layout_alignParentTop="true"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gallery_item_linLayout_top_margin"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_realName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="张宗昌"
                android:textColor="#ff4a4a4a"
                android:textSize="@dimen/gallery_item_tvRealName" />

            <TextView
                android:id="@+id/tv_jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/gallery_item_tvJobTitle_left_margin"
                android:text="主任医师"
                android:textColor="#0893A8"
                android:textSize="@dimen/gallery_item_tvJobTitle_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_jobDesc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gallery_item_tvJobDesc_height"
            android:layout_margin="@dimen/gallery_item_tvJobDesc_magrin"
            android:text="郑州市人民医院郑州市人民医院郑州市人民医院郑州市人民医院郑州市人民医院郑州市人民医院郑州市人民医院郑州市人民医院郑州市人民医院郑州市人民医院郑州市人民医院"
            android:textColor="#ff9b9b9b"
            android:textSize="@dimen/gallery_item_tvJobDesc_size" />

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gallery_item_titleLayout_height" >

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#0893A8"
                android:gravity="center"
                android:paddingRight="@dimen/gallery_item_tvJob_right_padding"
                android:text="药剂科主任"
                android:textColor="#ffffff"
                android:textSize="@dimen/gallery_item_tvJob_size" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/tv_job"
                android:background="#0893A8"
                android:src="@drawable/top" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>