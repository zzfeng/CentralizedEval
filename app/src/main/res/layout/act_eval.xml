<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:background="#0893A8" >

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="请为您服务的人员做出评价"
                android:textColor="#ffffff"
                android:textSize="@dimen/title_text_size" />

            <ImageView
                android:id="@+id/title_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/eval_iv_titleImg_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/eval_iv_titleImg_right_margin"
                android:src="@drawable/top" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />

        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/title_layout"
            android:layout_marginLeft="@dimen/eval_iv_linLayout0_margin"
            android:layout_marginRight="@dimen/eval_iv_linLayout0_margin"
            android:layout_marginTop="@dimen/eval_iv_linLayout0_top_margin"
            android:layout_weight="500"
            android:background="@drawable/white_rounded_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/eval_iv_userImage_width"
                android:layout_height="@dimen/eval_iv_userImage_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/eval_iv_userImage_margin"
                android:layout_marginRight="@dimen/eval_iv_userImage_margin"
                android:src="@drawable/white_rounded_bg" />

            <LinearLayout
                android:id="@+id/linLayout1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eval_linLayout1_height"
                android:layout_marginLeft="@dimen/eval_linLayout1_left_margin"
                android:orientation="vertical" >

                <Space
                    android:layout_width="@dimen/eval_space_width"
                    android:layout_height="@dimen/eval_space_height" />

                <LinearLayout
                    android:id="@+id/linLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eval_linLayout2_height"
                    android:layout_marginTop="@dimen/eval_linLayout2_top_margin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/eval_tvName_height"
                        android:layout_marginBottom="@dimen/eval_tvName_bottom_margin"
                        android:text="张宗昌"
                        android:textColor="#FF4A4A4A"
                        android:textSize="@dimen/eval_tvName_size" />

                    <TextView
                        android:id="@+id/tv_jobTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/eval_tvJobTitle_height"
                        android:layout_marginLeft="@dimen/eval_tvJobTitle_left_margin"
                        android:text="主任医师"
                        android:textColor="#FF0893A8"
                        android:textSize="@dimen/eval_tvJobTitle_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/eval_tvJob_height"
                    android:layout_marginTop="@dimen/eval_tvJob_top_margin"
                    android:text="药剂科主任"
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/eval_tvJob_size" />

                <TextView
                    android:layout_width="@dimen/eval_tv_null_width"
                    android:layout_height="@dimen/eval_tv_null_height"
                    android:layout_marginTop="@dimen/eval_tv_null_top_margin"
                    android:text="擅长领域"
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/eval_tv_null_size" />

                <TextView
                    android:id="@+id/tv_jobDesc"
                    android:layout_width="@dimen/eval_tvJobDesc_width"
                    android:layout_height="@dimen/eval_tvJobDesc_height"
                    android:layout_marginTop="@dimen/eval_tvJobDesc_top_margin"
                    android:scrollbars="vertical"
                    android:text="药理学.药剂学.无痛手术.中西医结合"
                    android:textColor="#FF0893A8"
                    android:textSize="@dimen/eval_tvJobDesc_size" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23" />

        <LinearLayout
            android:id="@+id/linLayout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/btn_back"
            android:layout_alignLeft="@+id/linearLayout0"
            android:layout_alignRight="@+id/linearLayout0"
            android:layout_below="@+id/linearLayout0"
            android:layout_marginBottom="@dimen/eval_linLayout3_bottom_margin"
            android:layout_marginLeft="@dimen/eval_iv_linLayout0_margin"
            android:layout_marginRight="@dimen/eval_iv_linLayout0_margin"
            android:layout_marginTop="@dimen/eval_linLayout3_top_margin"
            android:layout_weight="1008"
            android:background="@drawable/white_rounded_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eval_linLayout4_botton_margin"
                android:layout_marginLeft="@dimen/eval_linLayout4_left_margin"
                android:layout_marginTop="@dimen/eval_linLayout4_top_margin"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/eval_image_w_h"
                    android:layout_height="@dimen/eval_image_w_h"
                    android:src="@drawable/eval_xin" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/eval_textView2_left_margin"
                    android:text="您的意见对我们非常重要"
                    android:textColor="#FF0893A8"
                    android:textSize="@dimen/eval_textView2_size" />
            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eval_line_height"
                android:layout_marginBottom="@dimen/eval_line_bottom_margin"
                android:layout_marginLeft="@dimen/eval_line_margin"
                android:layout_marginRight="@dimen/eval_line_margin"
                android:layout_marginTop="@dimen/eval_line_top_margin"
                android:background="#FF0893A8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/eval_linearLayout1_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_feichangmanyi"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/ic_launcher"
                        android:text="非常满意" />

                    <Button
                        android:id="@+id/btn_manyi"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_launcher"
                        android:text="满意" />

                    <Button
                        android:id="@+id/btn_yiban"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/ic_launcher"
                        android:text="一般" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/eval_linearLayout1_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_nenglibuzu"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="150dp"
                        android:background="@drawable/ic_launcher"
                        android:text="能力不足" />

                    <Button
                        android:id="@+id/btn_taidubuhao"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="150dp"
                        android:background="@drawable/ic_launcher"
                        android:text="态度不好" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="270" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="@dimen/btn_back_width"
        android:layout_height="@dimen/btn_back_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/eval_btn_back_bottom_margin"
        android:layout_marginLeft="@dimen/eval_btn_back_left_margin"
        android:background="@drawable/btn_back"
        android:onClick="back" />

</RelativeLayout>