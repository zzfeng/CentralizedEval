<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="@dimen/grid_item_relLayout_width"
    android:layout_height="@dimen/grid_item_relLayout_height"
    android:background="@drawable/white_rounded_bg"
    android:padding="@dimen/grid_item_relLayout_padding" >

    <!-- android:layout_width="310dp" -->
    <!-- android:layout_height="430dp" -->

    <Space
        android:layout_width="1dp"
        android:layout_height="@dimen/grid_item_relLayout_height" />

    <ImageView
        android:id="@+id/image_url"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_item_iv_height"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_item_linLayout_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/white_bottom_rounded_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/grid_item_linLayout"
        android:paddingRight="@dimen/grid_item_linLayout" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grid_item_tvName_bottom_margin"
            android:text="张宗昌"
            android:textSize="@dimen/grid_item_tvName_size" />

        <TextView
            android:id="@+id/tv_jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主治医师"
            android:textColor="#5DB8C6"
            android:textSize="@dimen/grid_item_tvJobTitle" />
    </LinearLayout>

</RelativeLayout>